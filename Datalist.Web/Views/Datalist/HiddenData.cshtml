@section scripts {
<script>
    $('#Autocomplete').datalist({
        events: {
            select: function (e, data, triggerChanges) {
                $('#AutocompleteWorking').val(data.length ? data[0]['IsWorking'] : '');
                $('#AutocompleteId').val(data.length ? data[0]['Id'] : '');
            }
        }
    });
    $('#Datalist').datalist({
        events: {
            select: function (e, data, triggerChanges) {
                $('#DatalistWorking').val(data.length ? data[0]['IsWorking'] : '');
                $('#DatalistId').val(data.length ? data[0]['Id'] : '');
            }
        }
    });
</script>
}