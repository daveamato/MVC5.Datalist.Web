@{
    ViewBag.Title = "DatalistExtensions.AutocompleteFor";
}
@model Datalist.Web.Models.UserModel

<div class="panel panel-default">
    <div class="panel-heading">AutocompleteFor</div>
    <div class="panel-body">
        <strong>Description</strong>
        <pre>Html helper for creating autocomplete based on datalist functionality.</pre>
        <strong>Remarks</strong>
        <pre>This method should be used on inputs which does not required datalist search dialog.</pre>
        <strong>Examples</strong>
        <pre>
Creates datalist autocomplete input with id <span class="str">"DatalistId"</span> and <span class="str">"example-class"</span> class, which is mapped with hidden input <span class="str">"Id"</span>.

<span class="esc">@@</span>Html.AutocompleteFor(model => model.Id, <span class="kwrd">new</span> <span class="cls">DefaultDatalist</span>(), <span class="kwrd">new</span> { @@class = <span class="str">"example-class"</span> })</pre>
        <div class="autocomplete-group">
            @Html.AutoCompleteFor(model => model.Id, new DefaultDatalist(), new { @class = "example-class" })
        </div>
    </div>
</div>